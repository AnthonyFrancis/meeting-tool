<% if (current_page?(setup_subscription_path) || current_page?(new_subscription_path)) %>

<% else %>

  <% flash.each do |type, message| %>
    <% if type == "alert" %>
      <div class="bg-red-500 notice_alert">
        <div class="container px-2 py-4 mx-auto font-sans font-medium text-center text-white">
          <%= message %>
        </div>
      </div>
    <% end %>

    <% if type == "notice" %>
      <div class="bg-green-500 notice_alert">
        <div class="container px-2 py-4 mx-auto font-sans font-medium text-center text-white">
          <%= message %>
        </div>
      </div>
    <% end %>
  <% end %>

<% end %>